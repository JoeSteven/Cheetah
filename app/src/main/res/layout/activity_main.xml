<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:gravity="center"
    android:orientation="horizontal">

    <Button
        android:id="@+id/bt_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Go Ble"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline"
         />

    <Button
        android:id="@+id/bt_kt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="Go Net"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline"
         />

    <Button
        android:id="@+id/bt_extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Extension"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_java"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        />
    <Button
        android:id="@+id/bt_database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go DataBase"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_kt"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        />

    <Button
        android:id="@+id/bt_udp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go UDP "
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_extension"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        />
    <Button
        android:id="@+id/bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Photo "
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_extension"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        />
    <Button
        android:id="@+id/bt_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Scan "
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_udp"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        />
    <Button
        android:id="@+id/bt_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go face "
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_photo"
        app:layout_constraintLeft_toRightOf="@id/guideline"
        />

    <Button
        android:id="@+id/bt_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Permission "
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_scan"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        />

    <Button
        android:id="@+id/bt_reboot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Crash "
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/bt_face"
        app:layout_constraintLeft_toRightOf="@id/guideline"/>
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_test"
            android:layout_width="200dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="200dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
