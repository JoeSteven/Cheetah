<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joey.cheetah.sample.extension.ExtensionActivity">
    <EditText
        android:id="@+id/etParams"
        android:hint="input params here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnJump"
        android:layout_below="@id/etParams"
        android:text="Jump"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnJumpWithParams"
        android:layout_toRightOf="@id/btnJump"
        android:layout_alignTop="@id/btnJump"
        android:text="JumpWithParams"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnJumpForResult"
        android:layout_toRightOf="@id/btnJumpWithParams"
        android:layout_alignTop="@id/btnJumpWithParams"
        android:text="JumpForResult"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvVersionCode"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btnJump"
        android:textSize="20sp"
        android:text="version code is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvVersionName"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvVersionCode"
        android:textSize="20sp"
        android:text="version name is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvScreenWidth"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvVersionName"
        android:textSize="20sp"
        android:text="Screen Width is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvScreenHeight"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvScreenWidth"
        android:textSize="20sp"
        android:text="Screen Height is:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
